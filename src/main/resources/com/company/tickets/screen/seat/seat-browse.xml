<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://seatBrowse.caption"
        focusComponent="seatsTable">
    <data readOnly="true">
        <collection id="seatsDc"
                    class="com.company.tickets.entity.Seat">
            <fetchPlan extends="_base">
                <property name="cinemaHall" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="seatsDl">
                <query>
                    <![CDATA[select e from Seat e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="seatsTable" spacing="true">
        <filter id="filter"
                dataLoader="seatsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="seatsTable"
                    width="100%"
                    dataContainer="seatsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="cinemaHall"/>
                <column id="rowNumber"/>
                <column id="numberInRow"/>
                <column id="price"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="seatsTable.create"/>
                <button id="editBtn" action="seatsTable.edit"/>
                <button id="removeBtn" action="seatsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
