<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://ticketsBrowse.caption"
        focusComponent="ticketsTable">
    <data readOnly="true">
        <collection id="ticketsDc"
                    class="com.company.tickets.entity.Tickets">
            <fetchPlan extends="_base">
                <property name="seat" fetchPlan="_base">
                    <property name="cinemaHall" fetchPlan="_base"/>
                </property>
                <property name="session" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="ticketsDl">
                <query>
                    <![CDATA[select e from Tickets e WHERE e.user = :currentUser]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ticketsTable" spacing="true">
        <filter id="filter"
                dataLoader="ticketsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="ticketsTable"
                    width="100%"
                    dataContainer="ticketsDc">
            <actions>
                <action id="remove" />
            </actions>
            <columns>
                <group>
                    <column id="session"/>
                </group>
                <column id="seat.cinemaHall"/>
                <column id="price"/>
                <column id="seat"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="remove" action="ticketsTable.remove" caption="msg://remove.caption"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
