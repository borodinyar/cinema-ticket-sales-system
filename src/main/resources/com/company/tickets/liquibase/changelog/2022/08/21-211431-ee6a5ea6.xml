            </column>
            <column name="NUMBER_OF_ROWS" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="NUMBER_OF_SEATS" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="tickets">
