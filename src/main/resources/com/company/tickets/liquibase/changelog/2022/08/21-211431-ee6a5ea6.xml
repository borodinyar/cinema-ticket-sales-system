            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="tickets">
        <createTable tableName="SEAT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SEAT"/>
            </column>
            <column name="CINEMA_HALL_ID" type="UUID">
