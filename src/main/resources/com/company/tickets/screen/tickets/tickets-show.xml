<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://ticketsShow.caption"
        focusComponent="ticketsesTable">
    <data readOnly="true">
        <collection id="ticketsesDc"
                    class="com.company.tickets.entity.Tickets">
            <fetchPlan extends="_base">
                <property name="seat" fetchPlan="_instance_name">
<!--                    <property name="rowNumber"/>-->
<!--                    <property name="numberInRow"/>-->
                </property>
                <property name="session" fetchPlan="_base">
                    <property name="cinemaHall" fetchPlan="_instance_name"/>
<!--                    <property name="film" fetchPlan="_instance_name"/>-->
                </property>
            </fetchPlan>
            <loader id="ticketsDl">
                <query>
                    <![CDATA[select e from Tickets e WHERE e.isFree = TRUE]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="lookupSelectAction"
                caption="msg:///actions.Select"
                icon="LOOKUP_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="lookupCancelAction"
                caption="msg:///actions.Cancel"
                icon="LOOKUP_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout expand="ticketsesTable" spacing="true">
        <filter id="filter"
                dataLoader="ticketsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="ticketsesTable"
                    width="100%"
                    dataContainer="ticketsesDc">
            <actions>
                <action id="change" />
                <action id="buy" />
            </actions>
            <columns>
                <group>
                    <column id="session"/>
                </group>
                <column id="seat.cinemaHall"/>
                <column id="price"/>
                <column id="seat"/>
<!--                <column id="session"/>-->
                <column id="isFree"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="buyBtn" action="ticketsesTable.buy" caption="msg://buyBtn.caption"/>
                <button id="editBtn" action="ticketsesTable.change"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
